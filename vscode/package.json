{
    "name": "stl-language-support",
    "displayName": "STL Language Support",
    "description": "STL Language Support",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.36.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:stl"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "stl",
                "aliases": [
                    "STL",
                    "stl"
                ],
                "extensions": [
                    ".stl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stl",
                "scopeName": "source.stl",
                "path": "./syntaxes/stl.tmLanguage.json"
            }
        ],
        "configuration": {
			"type": "object",
			"title": "STL Language Support",
			"properties": {
				"vscode-stl-language-support.executable": {
					"scope": "window",
					"type": "string",
					"default": "",
					"markdownDescription": "Path to the `stl-server` executable"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.36.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "typescript": "^3.3.1",
        "tslint": "^5.12.1",
        "vscode-test": "^1.0.2"
    },
    "dependencies": {
        "vscode-languageclient": "^5.2.1"
    }
}
